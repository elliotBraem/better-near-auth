  "description": "Sign in with NEAR (SIWN) plugin for Better Auth",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./client": {
      "import": "./src/client.ts",
      "types": "./src/client.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",

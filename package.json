    "type": "git",
    "url": "https://github.com/elliotBraem/better-near-auth.git"
  },
  "bugs": {
    "url": "https://github.com/elliotBraem/better-near-auth/issues"
  },
  "homepage": "https://github.com/elliotBraem/better-near-auth#readme",
  "catalog": {
    "better-auth": "^1.4.4",
    "typescript": "^5.9.3",
    "zod": "^4.1.12",
    "@types/node": "^22.17.2",
    "@orpc/server": "^1.13.2",
    "@orpc/client": "^1.13.2"
